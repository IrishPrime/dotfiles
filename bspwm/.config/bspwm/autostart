#!/usr/bin/env bash

nitrogen --restore
setxkbmap -option ctrl:nocaps
xrdb -merge ~/.Xresources
xsetroot -cursor_name left_ptr

if ! pgrep xcompmgr; then
	xcompmgr -c -C -f -F -t-5 -l-5 -r4.2 -o.55 &
fi

sleep 0.5
case $(hostnamectl --static) in
	ireland)
		polybar --reload ireland-primary &
		numlockx on
		pasystray &
		;;
	wisp)
		polybar --reload wisp &
		;;
esac
